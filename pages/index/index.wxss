.container {
  background-color: rgba(221, 221, 223, 0.445);
}

.time {
  display: flex;
  background-color: rgb(233, 166, 122);
  padding: 16rpx 20rpx;
}
.think{
  text-align: center;
  background-color:rgb(64, 67, 247);
  color:white;
  border-radius: 30rpx;
  margin: 0 280rpx 10rpx 280rpx;
}
.calendar {
  padding: 0 20rpx;
  background-color: rgb(253, 246, 237);
  color: #38acff;
  border-radius: 30rpx;
}

.time view {
  flex: 1;
  font-size: 40rpx;
}

.time view text {
  font-size: 38rpx;
}

.title {
  color: royalblue;
}

.signdate {
  text-align: right;
}

.signdate .day {
  color: red;
}

.weekName {
  background-color: gainsboro;
  width: 100%;
  display: flex;
  padding: 16rpx 0;
}

.weekName view {
  flex: 1;
  text-align: center;
}

.sunday, .saturday {
  color: red;
}

.week {
  width: 100%;
  font-size: 40rpx;
}

.week view {
  width: 14.2%;
  height: 70rpx;
  line-height: 70rpx;
  display: inline-block;
  margin: 10rpx 0;
  text-align: center;
}

.week view text {
  width: 100%;
  height: 100%;
  display: inline-block;
}

.sign {
  display: block;
  margin: auto;
  text-align: center;
  padding: 20rpx;
}

.signcheck {
  color: white;
  font-size: 35rpx;
  width: 200rpx;
  height: 200rpx;
  line-height: 200rpx;
  background-color: red;
  border-radius: 500rpx;
  margin-top: 20rpx;
}

.bfsign {
  color: gainsboro;
}

.fsign {
  color: red;
  font-size: 30rpx;
} 

.afsign {
  color: red;
  font-size: 30rpx;
}